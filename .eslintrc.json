{
    "extends": [
      "standard",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/adjacent-overload-signatures": "error",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false
        }
      ],
      "yoda": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "no-dupe-class-members": "off"
    },
    "globals": {
      "fetch": false,
      "MediaStream": true
    }
  }